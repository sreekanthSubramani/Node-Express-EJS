<%- include('../View/includes/Header.ejs') %>
<link rel="stylesheet" href="/FormPage.css">
<%- include('../View/includes/Nav.ejs') %>

<form method="POST" action="/" class="form-Class">
    <label for="title">Title : </label>
    <input type="text" name="title" value="<%= allProd.title %>" >

    <label for="image">Image : </label>
    <input type="text" name="image" value="<%= allProd.image %>">

    <label for="description">Description :</label>
    <input type="text" name="description" value="<%= allProd.description %>">

    <label for="price">Price : </label>
    <input type="text" name="price" value="<%= allProd.price %>">

    <button type="submit"> Submit </button>
    <input type="hidden" name="productId" value="<%= allProd.id %>">
</form>

